# FalconEye Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ============================================
# Application Settings
# ============================================
FLASK_ENV=development
FLASK_PORT=3001
FALCONEYE_SECRET=your-secret-key-here-change-in-production

# ============================================
# Camera Configuration
# ============================================
CAM1_URL=http://10.103.190.6/jpg
CAM2_URL=http://10.103.190.170:8081/
ESP_PAN_BASE_URL=http://10.103.190.58

# ============================================
# AWS S3 Configuration (Optional)
# ============================================
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=falconeye-clips

# ============================================
# Firebase Cloud Messaging (Optional)
# ============================================
FCM_SERVER_KEY=your_firebase_server_key_here
FIREBASE_PROJECT_ID=your_project_id_here

# ============================================
# AI Model Configuration
# ============================================
# Device: cuda, mps (Apple Silicon), or cpu
DEVICE=auto
# Model names: yolov8n.pt, yolov8s.pt, yolov8m.pt, yolov8l.pt, yolov8x.pt
DETECT_MODEL_NAME=yolov8s.pt
LIVE_MODEL_NAME=yolov8n.pt

# ============================================
# Feature Flags
# ============================================
FALCONEYE_FACES_ENABLED=true
FALCONEYE_DISABLE_FACE_RECOGNITION=false
TEST_MODE=false

# ============================================
# Cloudflare Tunnel (Optional)
# ============================================
CLOUDFLARE_TUNNEL_NAME=falconeye-permanent-enhanced
CLOUDFLARE_CREDENTIALS_FILE=/path/to/credentials.json
